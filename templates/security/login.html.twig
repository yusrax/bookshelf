{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <div class="modal modal-sheet position-static d-block bg-body-secondary">
        <div class="modal-dialog" role="document">
            <div class="modal-content rounded-4 shadow">
                <div class=" p-5 pb-4 border-bottom-0 text-center">
                    <h1 class="fw-bold mb-0 fs-2">Sign In</h1>
                </div>

                <div class="modal-body p-5 pt-0 text-center">
                    <form method="post">
                        <!-- Error message -->
                        {% if error %}
                            <div class="alert alert-danger rounded-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <!-- Already logged in -->
                        {% if app.user %}
                            <div class="alert alert-info rounded-3">
                                You are logged in as {{ app.user.userIdentifier }},
                                <a href="{{ path('app_logout') }}" class="text-decoration-none">Logout</a>.
                            </div>
                        {% endif %}

                        <!-- Email Field -->
                        <div class="form-floating mb-3">
                            <input type="text" value="{{ last_username }}" name="email" id="floatingInput" class="form-control rounded-3" autocomplete="email" placeholder="name@example.com" required autofocus>
                            <label for="floatingInput">Email</label>
                        </div>

                        <!-- Password Field -->
                        <div class="form-floating mb-3">
                            <input type="password" name="password" id="floatingPassword" class="form-control rounded-3" autocomplete="current-password" placeholder="Password" required>
                            <label for="floatingPassword">Password</label>
                        </div>

                        <!-- CSRF Token -->
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <!-- Remember Me -->
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>

                        <hr class="my-4">

                        <small class="text-body-secondary d-block mb-3"> Not yet a member ? <a href="/register"> Sign Up </a></small>

                        <!-- Submit Button -->
                        <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">
                            Sign in
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

